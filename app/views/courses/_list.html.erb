<div id="filterrific_results">
  <div class="well well-small">
  <div class="pull-right" data-intro="Reset the filter settings to defaults." data-position="bottom">
    <%= link_to('Reset filters', reset_filterrific_url) %>

  </div>
  <div class="chardin_box" data-intro="will_paginate's entries info works as expected." data-position="bottom">
  <%= page_entries_info @courses, entry_name: "programs" %>
  </div>
  <div class="chardin_box" data-intro="Spinner indicates update." data-position="bottom">

        <span class="filterrific_spinner" style="display:none;">
          <%= render_filterrific_spinner %>
        </span>

  </div>
  </div>

  <table class="table table-striped table-hover">
      <tr>
        <th>Title</th>
        <th>Code</th>
        <th>Start date</th>
        <th>Level</th>
        <th>School</th>
        <th>Course method</th>
        <th>Credit</th>
      </tr>

      <% @courses.each do |course| %>
        <tr>
          <td><%= course.title %></td>
          <td><%= course.prefix %> <%= course.code %> <%= course.section %></td>
          <td><%= course.start_date %></td>
          <td><%= course.level %></td>
          <td><%= course.school.name %></td>
          <td><%= course.course_method %></td>
          <td><%= course.credit %></td>
        </tr>
      <% end %>
  </table>
