<div id="filterrific_results" class="row">
  <div class="container">
	  
  <div class="pull-right resets" data-intro="Reset the filter settings to defaults." data-position="bottom">
    <%= link_to('Reset filters', reset_filterrific_url, :class => 'reset_link') %>

  </div>
  <div class="chardin_box resets" data-intro="will_paginate's entries info works as expected." data-position="bottom">
  <%= page_entries_info @courses, entry_name: "courses" %>
  </div>
  <div class="chardin_box resets" data-intro="Spinner indicates update." data-position="bottom">

        <span class="filterrific_spinner" style="display:none;">
          <%= render_filterrific_spinner %>
        </span>
	 </div>
 </div>
 
 <div class="row">
 	<div class="container results">

  <table class="table table-hover">
      <tr>
		<th></th>
        <th><%= filterrific_sorting_link(@filterrific, :title) %></th>
        <th>Code</th>
		<th><%= filterrific_sorting_link(@filterrific, :subject_area) %></th>
        <th><%= filterrific_sorting_link(@filterrific, :start_date) %></th>
        <th><%= filterrific_sorting_link(@filterrific, :credit) %></th>
      </tr>

      <% @courses.each do |course| %>
        <tr>
		  <td><%= image_tag(course.school.image.url(:small), :align=> "center", :width=> "55px") %></td>
          <td><%= link_to course.title, course %> <br> <%= course.school.name %></td>
          <td><%= course.prefix %> <%= course.code %> <%= course.section %></td>
		  <td><%= course.course_area %></td>
          <td><%= course.start_date.strftime("%m/%d/%y")%></td>
          <td><span><%= course.credit %></span></td>
        </tr>
      <% end %>
  </table>
  
  	</div>
 </div>
</div>