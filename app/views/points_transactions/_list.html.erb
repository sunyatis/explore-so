<%# app/views/students/_list.html.erb %>
<div id="filterrific_results">
  <div class="well well-small">
  <div class="pull-right" data-intro="Reset the filter settings to defaults." data-position="bottom">
    <%= link_to('Reset filters', reset_filterrific_url) %>

  </div>
  <div class="chardin_box" data-intro="will_paginate's entries info works as expected." data-position="bottom">
  Displaying students <b>1&nbsp;-&nbsp;10</b> of <b>134</b> in total
  </div>
  <div class="chardin_box" data-intro="Spinner indicates update." data-position="bottom">

        <span class="filterrific_spinner" style="display:none;">
          <%= render_filterrific_spinner %>
        </span>

  </div>
  </div>


  <div>
    <!--%= page_entries_info students # provided by will_paginate %-->
  </div>
  <table class="table">
    <tr>
      <th>Campus</th>
      <th>Trans type</th>
      <th>Points</th>
      <th>Payment</th>
      <th>Attendee</th>
      <th>Event start</th>
      <th>Event end</th>
      <th>Course</th>
      <th>Approved</th>
      <th>Points type</th>
      <th>Trans date</th>
      <th colspan="3"></th>
    </tr>
    <% @points_transactions.each do |points_transaction| %>
      <tr>
        <td><%= points_transaction.school.name %></td>
        <td><%= points_transaction.trans_type %></td>
        <td><%= points_transaction.points %></td>
        <td><%= points_transaction.payment %></td>
        <td><%= points_transaction.attendee %></td>
        <td><%= points_transaction.event_start %></td>
        <td><%= points_transaction.event_end %></td>
        <td><%= points_transaction.course %></td>
        <td><%= points_transaction.approved %></td>
        <td><%= points_transaction.points_type %></td>
        <td><%= points_transaction.trans_date %></td>
        <td><%= link_to 'Show', points_transaction %></td>
        <td><%= link_to 'Edit', edit_points_transaction_path(points_transaction) %></td>
        <td><%= link_to 'Destroy', points_transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>


<!--%= will_paginate students # provided by will_paginate %-->